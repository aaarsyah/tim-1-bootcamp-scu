@page "/success-purchase"

@using System.ComponentModel.DataAnnotations
@using MudBlazor.Services;
@using Microsoft.Extensions.Localization;

@inject NavigationManagerExt Navigation;

<PageTitle> Success Purchase</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center mt-8">
    <MudImage Src="img/animasiconfirmsuccess.svg" Alt="Email Confirmation Animation" Width="250" Height="250"/>
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-2">Pembelian Berhasil</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">Yey! Kamu telah berhasil membeli kursus di Apel Music</MudText>

    <!--Button Ke Beranda -->
    <MudStack Direction="Row" Spacing="5" Row="true" class="mt-4">
    <MudButton OnClick="Navigation.GoToHome" StartIcon="@Icons.Material.Filled.Home" Variant="Variant.Outlined" Color="Color.Primary" Style="width: 170px; height: 55px; border-radius: 8px">
            Ke Beranda
    </MudButton>
   
    <!--Button Buka Invoice -->
     <MudButton OnClick="Navigation.GoToInvoice" StartIcon="@Icons.Material.Filled.ArrowForward" Variant="Variant.Filled" Color="Color.Primary" Style="width: 170px; height: 55px; border-radius: 8px">
            Buka Invoice
    </MudButton>
    </MudStack>
    
</MudContainer>