@using MyApp.BlazorUI.Services
@using System.ComponentModel.DataAnnotations
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation
@inject ISnackbar Snackbar

@inject IAuthService AuthService
@inject IAdminService PaymentService

@inject IDialogService DialogService
@inject IWebHostEnvironment Env

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Payment.Name" Label="Name" Required="true" />
        
        <InputFile id="fileInput" OnChange="UploadImage" hidden accept="image/*" />

        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   Class="mt-20"
                   for="fileInput">
            Upload Logo
        </MudButton>

        @if (!string.IsNullOrEmpty(previewLogoUrl))
        {
            <MudImage Src="@previewLogoUrl"
                      Alt="Picture Category Preview"
                      Width="150" Height="100"
                      Class="mx-auto mt-3 rounded shadow-sm" />
        }

        
        <MudSelect @bind-Value="Payment.IsActive" Class="mt-4" Label="Status">
            <MudSelectItem Value="true">Active</MudSelectItem>
            <MudSelectItem Value="false">Inactive</MudSelectItem>
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public PaymentMethodDto Payment { get; set; } = null!;
    [Parameter]
    public bool IsUpdating { get; set; }
    private string? previewLogoUrl;

    protected override void OnInitialized()
    {
        previewLogoUrl = !string.IsNullOrEmpty(Payment.LogoUrl) ? Payment.LogoUrl : null;
        Console.WriteLine($"PaymentDialog.razor: IsUpdating: {IsUpdating}");
    }

    private async Task UploadImage(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        var ext = Path.GetExtension(file.Name).ToLower();
        var fileName = $"{Guid.NewGuid()}{ext}";
        var savePath = Path.Combine(Env.WebRootPath, "img", fileName);

        await using (var stream = new FileStream(savePath, FileMode.Create))
        {
            await file.OpenReadStream(maxAllowedSize: 5_000_000).CopyToAsync(stream);
        }

        Payment.LogoUrl = $"/img/{fileName}";
        previewLogoUrl = Payment.LogoUrl;
        StateHasChanged();
    }

    private async Task Save()
    {
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        PaymentMethodDto? result;

        if (IsUpdating)
        {
            UpdatePaymentMethodRequestDto updatePaymentDto = new()
            {
                Name = Payment.Name,
                LogoUrl = Payment.LogoUrl,
                IsActive = Payment.IsActive
            };
            result = await PaymentService.UpdatePaymentMethodAsync(auth, Payment.RefId, updatePaymentDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal mengedit payment method", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil mengedit payment method", Severity.Success);
        }
        else
        {
            CreatePaymentMethodRequestDto createPaymentDto = new()
            {
                Name = Payment.Name,
                LogoUrl = Payment.LogoUrl,
                IsActive = Payment.IsActive
            };
            result = await PaymentService.CreatePaymentMethodAsync(auth, createPaymentDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal menmbuat payment method baru", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil menmbuat payment method baru", Severity.Success);
        }
        MudDialog.Close(DialogResult.Ok(result));
    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }

}
