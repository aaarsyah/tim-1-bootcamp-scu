@using MyApp.BlazorUI.Services
@using System.ComponentModel.DataAnnotations
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation
@inject ISnackbar Snackbar

@inject IAuthService AuthService
@inject IAdminService AdminService

@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Category.Name" Label="Name" Required="true" />
        <MudTextField @bind-Value="Category.Description" Label="Description" AutoGrow Required="true" />
        
        <InputFile id="fileInput" OnChange="UploadImage" hidden accept="image/*" />

        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   Class="mt-20"
                   for="fileInput">
            Upload Picture Category
        </MudButton>

        @if (!string.IsNullOrEmpty(Category.ImageUrl))
        {
            <MudImage Src="@Category.ImageUrl"
                      Alt="Picture Category Preview"
                      Width="150" Height="100"
                      Class="mt-4" />
        }

        <MudSelect @bind-Value="Category.IsActive" Class="mt-4" Label="Status">
            <MudSelectItem Value="true">Active</MudSelectItem>
            <MudSelectItem Value="false">Inactive</MudSelectItem>
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public CategoryDto Category { get; set; } = null!;
    [Parameter]
    public bool IsUpdating { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"CourseDialog.razor: IsUpdating: {IsUpdating}");
    }

    private async Task UploadImage(InputFileChangeEventArgs e)
    {
        var file = e.File;

        if (file != null)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 5_000_000); // max 5 MB
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            var ext = Path.GetExtension(file.Name).ToLower();
            var mime = ext switch
            {
                ".jpg" or ".jpeg" => "image/jpeg",
                ".png" => "image/png",
                ".svg" => "image/svg+xml",
                _ => "image/png"
            };

            Category.ImageUrl = $"data:{mime};base64,{Convert.ToBase64String(ms.ToArray())}"; // TODO: Fix this
        }
    }

    private async Task Save()
    {
        var auth = await AuthService.GetAccessTokenAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        CategoryDto? result;

        if (IsUpdating)
        {
            UpdateCategoryDto updateCategoryDto = new()
            {
                Name = Category.Name,
                LongName = Category.LongName,
                Description = Category.Description,
                ImageUrl = Category.ImageUrl,
                IsActive = Category.IsActive
            };
            result = await AdminService.UpdateCategoryAsync(auth, Category.Id, updateCategoryDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal mengedit category", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil mengedit category", Severity.Success);
        }
        else
        {
            CreateCategoryDto createCategoryDto = new()
            {
                Name = Category.Name,
                LongName = Category.LongName,
                Description = Category.Description,
                ImageUrl = Category.ImageUrl,
                IsActive = Category.IsActive
            };
            result = await AdminService.CreateCategoryAsync(auth, createCategoryDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal membuat category baru", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil membuat category baru", Severity.Success);
        }
        MudDialog.Close(DialogResult.Ok(result));
    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
