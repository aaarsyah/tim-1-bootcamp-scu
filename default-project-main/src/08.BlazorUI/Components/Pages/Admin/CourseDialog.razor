@using MyApp.BlazorUI.Services
@using System.ComponentModel.DataAnnotations
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation
@inject ISnackbar Snackbar

@inject IAuthService AuthService
@inject IAdminService AdminService

@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Course.Name" Label="Name" Required="true" />
        <MudTextField @bind-Value="Course.Description" Label="Description" AutoGrow Required="true" />
        <MudTextField @bind-Value="Course.CategoryId" Label="CategoryId" Required="true" />
        <MudTextField @bind-Value="Course.Price" Label="Harga" Required="true" />
        <MudTextField @bind-Value="Course.Schedules" Label="Jadwal" Required="true" />

        <InputFile id="fileInput" OnChange="UploadImage" hidden accept="image/*" />

        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   Class="mt-20"
                   for="fileInput">
            Upload Picture Course
        </MudButton>

        @if (!string.IsNullOrEmpty(Course.ImageUrl))
        {
            <MudImage Src="@Course.ImageUrl"
                      Alt="Picture Course Preview"
                      Width="150" Height="100"
                      Class="mx-auto mt-4" />
        }

        
        <MudSelect @bind-Value="Course.IsActive" Class="mt-4" Label="Status">
            <MudSelectItem Value="true">Active</MudSelectItem>
            <MudSelectItem Value="false">Inactive</MudSelectItem>
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public CourseDto Course { get; set; } = null!;
    [Parameter]
    public bool IsUpdating { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"CourseDialog.razor: IsUpdating: {IsUpdating}");
    }

    private async Task UploadImage(InputFileChangeEventArgs e)
    {
        var file = e.File;

        if (file != null)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 5_000_000); // max 5 MB
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            var ext = Path.GetExtension(file.Name).ToLower();
            var mime = ext switch
            {
                ".jpg" or ".jpeg" => "image/jpeg",
                ".png" => "image/png",
                ".svg" => "image/svg+xml",
                _ => "image/png"
            };

            Course.ImageUrl = $"data:{mime};base64,{Convert.ToBase64String(ms.ToArray())}"; // TODO: Fix this
        }
    }

    private async Task Save()
    {
        var auth = await AuthService.GetAccessTokenAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        CourseDto? result;

        if (IsUpdating)
        {
            UpdateCourseDto updateCourseDto = new()
            {
                Name = Course.Name,
                Description = Course.Description,
                Price = Course.Price,
                ImageUrl = Course.ImageUrl,
                IsActive = Course.IsActive,
                CategoryId = Course.CategoryId
            };
            result = await AdminService.UpdateCourseAsync(auth, Course.Id, updateCourseDto);
        }
        else
        {
            CreateCourseDto createCourseDto = new()
            {
                Name = Course.Name,
                Description = Course.Description,
                Price = Course.Price,
                ImageUrl = Course.ImageUrl,
                IsActive = Course.IsActive,
                CategoryId = Course.CategoryId
            };

            result = await AdminService.CreateCourseAsync(auth, createCourseDto);
        }
        if (result == null)
        {
            Snackbar.Add($"Gagal menambahkan ke keranjang", Severity.Error);
            return;
        }
        MudDialog.Close(DialogResult.Ok(result));
    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }

}
