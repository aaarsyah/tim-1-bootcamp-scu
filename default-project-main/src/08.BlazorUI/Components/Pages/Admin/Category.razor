@page "/category"

@using System.Net.Http.Json
@using MyApp.Shared.DTOs
@inject IDialogService DialogService
@inject HttpClient _httpClient
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Category</PageTitle>

<MudText Typo="Typo.h5" Class="mt-16 mb-4">Category</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenCategoryDialog(null)">
    Add Category
</MudButton>

<MudTable Items="@category" Hover="true" Filter="FilterFunc" @bind-SelectedItem="selectedItem">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Category</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Picture</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Description">
            <div style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 200px;">
                @context.Description
            </div>
        </MudTd>
        <MudImage Class="mt-3" Src="@context.ImageUrl" Alt="@context.Name" Width="40" Height="40" />
        <MudTd DataLabel="Status">
            @if (context.IsActive == true)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">Active</MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">Inactive</MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => OpenCategoryDialog(context)">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" Class="ml-2"
                       OnClick="() => DeleteCategory(context.Id)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private List<CategoryDto> category = new();
    private CategoryDto? selectedItem = null;
    private string searchString = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        try
        {
            var response = await _httpClient.GetFromJsonAsync<ApiResponse<IEnumerable<CategoryDto>>>("api/Category");
            if (response?.Data != null)
                category = response.Data.ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat kategori: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(CategoryDto u)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        return u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase);
    }

    private async Task DeleteCategory(int id)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
            "Hapus Kategori",
            "Apakah Anda yakin ingin menghapus kategori ini?",
            yesText: "Ya", noText: "Batal"
        );

        if (confirmed != true) return;

        try
        {
            var response = await _httpClient.DeleteAsync($"api/Category/{id}");
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Kategori berhasil dihapus", Severity.Success);
                await LoadCategories();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Kategori gagal dihapus: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Terjadi kesalahan: {ex.Message}", Severity.Error);
        }
    }

    private async Task OpenCategoryDialog(CategoryDto? categoryItem)
    {
        var parameters = new DialogParameters();
        if (categoryItem != null)
            parameters.Add("Category", categoryItem);

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = DialogService.Show<CategoryDialog>("Category Form", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is CategoryDto)
        {
            await LoadCategories();
        }
    }
}


