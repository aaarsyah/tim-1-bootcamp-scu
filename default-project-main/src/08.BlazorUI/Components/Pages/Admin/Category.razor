@page "/category" 

@using System.Net.Http.Json
@using MyApp.BlazorUI.Models
@using MyApp.BlazorUI.Services

@inject IDialogService DialogService;
@inject ICategoryService CategoryService;
@inject NavigationManagerExt Navigation;


<PageTitle>Category</PageTitle>

<MudText Typo="Typo.h5" Class="mt-16 mb-4">Category</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenCategoryDialog(null)">
    Add Category
</MudButton>

<MudTable Items="@category" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Category</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Picture</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudImage Class="mt-3" Src="@context.Picture" Alt="@context.Name" Width="40" Height="40" />
        <MudTd DataLabel="Status">
            @if (context.AllCategory == CategoryStatus.Active)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else if (context.AllCategory == CategoryStatus.InActive)
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => OpenCategoryDialog(context)">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                       Class="ml-2"
                       OnClick="() => DeleteCategory(context.Id)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<CategoryItem> category = new List<CategoryItem>();
    private bool hover = true;
    private string searchString1 = "";
    private CategoryItem selectedItem1 = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        category = await CategoryService.GetCategoryAsync();
    }

    private bool FilterFunc1(CategoryItem u) => FilterFunc(u, searchString1);

    private bool FilterFunc(CategoryItem u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }

    private async Task DeleteCategory(int id)
    {
        bool result = await CategoryService.DeleteCategoryAsync(id);
        if (result) await LoadCategories();
    }

  private async Task OpenCategoryDialog(CategoryItem categoryItem)
    {
        var parameters = new DialogParameters();
        if (categoryItem != null)
            parameters.Add("Category", categoryItem);

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = DialogService.Show<CategoryDialog>("Category Form", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is CategoryItem)
        {
            await LoadCategories();
        }
    }

}
