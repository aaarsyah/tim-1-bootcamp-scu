@page "/course" 

@using System.Net.Http.Json
@using MyApp.BlazorUI.Services
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation

@inject IAuthService AuthService
@inject IAdminService AdminService

@inject IDialogService DialogService
@inject ISnackbar Snackbar


<PageTitle>Course Management</PageTitle>

<MudText Typo="Typo.h2" Class="mt-4 mb-4">Course</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenCourseDialog(null)">
    Add Course
</MudButton>

<MudTable Breakpoint="Breakpoint.Sm" Items="@course" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h2">Course</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Picture</MudTh>
        <MudTh>CategoryId</MudTh>
        <MudTh>Harga</MudTh>
        <MudTh>Jadwal</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Description">
            <div style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 200px;">
                @context.Description
            </div>
        </MudTd>
        <MudTd DataLabel="Picture">
                <MudImage Src="@context.ImageUrl"
                          Alt="@context.Name"
                          Width="40"
                          Height="40"
                          Class="rounded-md mt-1" />
        </MudTd>
        <MudTd DataLabel="CategoryId">@context.CategoryId</MudTd>
        <MudTd DataLabel="Harga">@context.Price</MudTd>
        <MudTd DataLabel="Jadwal"> @string.Join(",\n", @context.ScheduleDates.Select(d => d.ToString("yyyy-MM-dd")))</MudTd>
        <MudTd DataLabel="Status">
            @if (context.IsActive)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       Class="ml-auto mr-2"
                       OnClick="() => OpenCourseDialog(context)">
                Edit
            </MudButton>
            <br />
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                       OnClick="() => DeleteCourse(context.Id)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<CourseDto> course = new List<CourseDto>();
    private bool hover = true;
    private string searchString = "";
    private CourseDto selectedItem1 = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadCourses();
    }

    private async Task LoadCourses()
    {
        course = await AdminService.GetAllCourseAsync();
    }

    private bool FilterFunc1(CourseDto u) => FilterFunc(u, searchString);

    private bool FilterFunc(CourseDto u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }

    private async Task DeleteCourse(int id)
    {
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        bool result = await AdminService.DeleteCourseAsync(auth, id);
        if (result) await LoadCourses();
        Snackbar.Add("Berhasil menghapus course", Severity.Success);
    }

    private async Task OpenCourseDialog(CourseDto? courseItem)
    {
        var parameters = new DialogParameters();
        //
        CourseDto? courseItemClone = null;
        bool isUpdating = courseItem != null;
        if (courseItem != null)
        {
            courseItemClone = new CourseDto()
            {
                Id = courseItem.Id,
                Name = courseItem.Name,
                Description = courseItem.Description,
                Price = courseItem.Price,
                ImageUrl = courseItem.ImageUrl,
                IsActive = courseItem.IsActive,
                CreatedAt = courseItem.CreatedAt,
                CategoryId = courseItem.CategoryId,
                CategoryName = courseItem.CategoryName,
                ScheduleDates = new(),
                Schedules = new()
            };
        }
        // 
        parameters.Add("Course", courseItemClone ?? new CourseDto());
        parameters.Add("IsUpdating", isUpdating); // Bila courseItem ada, berarti updating

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<CourseDialog>("Course Form", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is CourseDto)
        {
            await LoadCourses();
        }
    }
}
