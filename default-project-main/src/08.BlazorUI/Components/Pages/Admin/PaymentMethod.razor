@page "/payment-method" 

@using System.Net.Http.Json
@using MyApp.BlazorUI.Services
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation

@inject IAuthService AuthService
@inject IAdminService PaymentService
@inject ICheckoutService CheckoutService

@inject IDialogService DialogService
@inject ISnackbar Snackbar


<PageTitle>Payment Method</PageTitle>

<MudText Typo="Typo.h5" Class="mt-16 mb-4">Payment Method</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenPaymentDialog(null)">
    Add Payment Method
</MudButton>

<MudTable Items="@payment" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Payment Method</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Logo</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudImage Class="mt-3" Src="@context.LogoUrl" Alt="@context.Name" Width="40" Height="40" />
        <MudTd DataLabel="Status">
            @if (context.IsActive)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => OpenPaymentDialog(context)">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                       Class="ml-2"
                       OnClick="() => DeletePayment(context.Id)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<PaymentDto> payment = new List<PaymentDto>();
    private bool hover = true;
    private string searchString1 = "";
    private PaymentDto selectedItem1 = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadPayments();
    }

    private async Task LoadPayments()
    {
        var auth = await AuthService.GetAccessTokenAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        payment = await CheckoutService.GetAllPaymentsAsync(auth);
    }

    private bool FilterFunc1(PaymentDto u) => FilterFunc(u, searchString1);

    private bool FilterFunc(PaymentDto u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }

    private async Task DeletePayment(int id)
    {
        var auth = await AuthService.GetAccessTokenAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        bool result = await PaymentService.DeletePaymentMethodAsync(auth, id);
        if (result) await LoadPayments();
        Snackbar.Add("Berhasil menghapus payment method", Severity.Success);
    }

    private async Task OpenPaymentDialog(PaymentDto paymentItem)
    {
        var parameters = new DialogParameters();
        //
        PaymentDto? paymentItemClone = null;
        bool isUpdating = paymentItem != null;
        if (paymentItem != null)
        {
            paymentItemClone = new PaymentDto()
            {
                Id = paymentItem.Id,
                Name = paymentItem.Name,
                LogoUrl = paymentItem.LogoUrl,
                CreatedAt = paymentItem.CreatedAt,
                UpdatedAt = paymentItem.UpdatedAt,
                IsActive = paymentItem.IsActive
            };
        }
        //
        parameters.Add("Payment", paymentItemClone ?? new PaymentDto());
        parameters.Add("IsUpdating", isUpdating); // Bila courseItem ada, berarti updating

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<PaymentDialog>("Payment Form", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is PaymentDto)
        {
            // if (isUpdating)
            // {
            //     paymentItem = (PaymentDto)result.Data;
            // }
            await LoadPayments();
        }
    }

}
