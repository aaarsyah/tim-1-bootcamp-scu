@page "/user-management" 

@using System.Net.Http.Json
@using MyApp.Domain.Models
@using MyApp.BlazorUI.Services
@using MyApp.Shared.DTOs
@using System.Net.Http.Headers

@inject NavigationManagerExt Navigation

@inject IAuthService AuthService
@inject IUserService UserService

@inject IDialogService DialogService


<PageTitle>User Management</PageTitle>

<MudText Typo="Typo.h2" Class="mt-4 mb-4">User Management</MudText>

<MudTable Items="@users" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h2">Users</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Email</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Role</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Role">@string.Join(", ", context.Roles)</MudTd>
        <MudTd DataLabel="Status">
            @if (context.IsActive)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => OpenUserDialog(context)">
                Edit
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<UserDto> users = new List<UserDto>();
    private IEnumerable<RoleDto> roles = new List<RoleDto>();
    private bool hover = true;
    private string searchString1 = "";
    private UserDto selectedItem1 = null;

    // protected override async Task OnInitializedAsync()
    // {
    // }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        users = await UserService.GetAllUsersAsync(auth);
        roles = await UserService.GetAllRolesAsync(auth);
        StateHasChanged();
    }

    private bool FilterFunc1(UserDto u) => FilterFunc(u, searchString1);

    private bool FilterFunc(UserDto u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if ($"{u.Roles.First()}".Contains(searchString)) return true;
        return false;
    }

    // private async Task DeleteUser(int id)
    // {
    //     bool result = await UserService.DeleteUserAsync(id);
    //     if (result) await LoadUsers();
    // }

    private async Task OpenUserDialog(UserDto userItem)
    {
        var parameters = new DialogParameters();
        if (userItem != null)
        {
            parameters.Add("Roles", roles);
            parameters.Add("User", userItem);
        }
        

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<UserDialog>("User Form", parameters, options);
        var result = await dialog.Result;

        if (true)
        {
            var auth = await AuthService.GetAuthAsync();
            if (auth == null)
            {
                Navigation.GoToLogin(); // User belum login, arahkan user ke login page
                return;
            }
            users = await UserService.GetAllUsersAsync(auth);
        }
    }

}
