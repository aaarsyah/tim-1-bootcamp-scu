@page "/user-management" 

@using System.Net.Http.Json
@using MyApp.BlazorUI.Models
@using MyApp.BlazorUI.Services

@inject IDialogService DialogService;
@inject IUserService UserService;
@inject NavigationManagerExt Navigation;


<PageTitle>User Management</PageTitle>

<MudText Typo="Typo.h5" Class="mt-16 mb-4">User Management</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenUserDialog(null)">
    Add User
</MudButton>

<MudTable Items="@user" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Users</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Email</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Role</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Role">@context.UserRole</MudTd>
        <MudTd DataLabel="Status">
            @if (context.AllUser == UserStatus.Active)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else if (context.AllUser == UserStatus.InActive)
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => OpenUserDialog(context)">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                       Class="ml-2"
                       OnClick="() => DeleteUser(context.Id)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<UserItem> user = new List<UserItem>();
    private bool hover = true;
    private string searchString1 = "";
    private UserItem selectedItem1 = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        user = await UserService.GetUserAsync();
    }

    private bool FilterFunc1(UserItem u) => FilterFunc(u, searchString1);

    private bool FilterFunc(UserItem u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if ($"{u.UserRole}".Contains(searchString)) return true;
        return false;
    }

    private async Task DeleteUser(int id)
    {
        bool result = await UserService.DeleteUserAsync(id);
        if (result) await LoadUsers();
    }

  private async Task OpenUserDialog(UserItem userItem)
    {
        var parameters = new DialogParameters();
        if (userItem != null)
            parameters.Add("User", userItem);

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<UserDialog>("User Form", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is UserItem)
        {
            await LoadUsers();
        }
    }

}
