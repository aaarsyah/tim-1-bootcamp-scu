@page "/dashboard"

@using System.Globalization
@using System.Net.Http.Json
@using MyApp.Domain.Models
@using MyApp.BlazorUI.Services
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation
@inject IAuthService AuthService
@inject IUserService UserService
@inject ICheckoutService CheckoutService
@inject IAdminService PaymentService
@inject IDialogService DialogService

<PageTitle>Dashboard Admin</PageTitle>

<MudText Typo="Typo.h5" Class="mt-4 mb-4">Welcome, Admin!</MudText>

<!-- Statistics Cards -->
<MudGrid Class="mb-6">
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total User Active</MudText>
                        <MudText Typo="Typo.h4">@_totalUserActive</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total Payment Active</MudText>
                        <MudText Typo="Typo.h4">@_totalPayment</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Payments" Color="Color.Warning" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total Invoice (Member)</MudText>
                        <MudText Typo="Typo.h4">@_totalInvoice</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" Color="Color.Success" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<!-- Invoice Table -->
<MudTable Items="@invoices" Hover="true" Filter="new Func<InvoiceDto,bool>(FilterFunc)" @bind-SelectedItem="selectedInvoice">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Invoices</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search Invoice"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>

    <HeaderContent>
        <MudTh>Email</MudTh>
        <MudTh>No. Invoice</MudTh>
        <MudTh>Date</MudTh>
        <MudTh>Total Course</MudTh>
        <MudTh>Total Price</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="NoInvoice">@context.RefCode</MudTd>
        <MudTd DataLabel="Date">@context.CreatedAt.ToString("yyyy-MM-dd", new CultureInfo("id-ID"))</MudTd>
        <MudTd DataLabel="TotalCourse">@context.TotalCourse</MudTd>
        <MudTd DataLabel="TotalPrice">@context.TotalPrice.ToString("C0", new CultureInfo("id-ID"))</MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       OnClick="() => Navigation.GoToDetailsInvoiceAdmin(context.Id)">
                Details
            </MudButton>
        </MudTd>
    </RowTemplate>

    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private int _totalUserActive = 0;
    private int _totalPayment = 0;
    private int _totalInvoice = 0;
    private string searchString = "";
    private InvoiceDto selectedInvoice = null;
    private IEnumerable<InvoiceDto> invoices = new List<InvoiceDto>();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await LoadDashboardData();
        StateHasChanged();
    }

    private async Task LoadDashboardData()
    {
        var token = await AuthService.GetAccessTokenAsync();
        if (token == null)
        {
            Navigation.GoToLogin();
            return;
        }

        // Get all invoices
        invoices = await CheckoutService.GetAllInvoiceAdminAsync(token);
        _totalInvoice = invoices.Count();

        // Get all users
        var users = await UserService.GetAllUsersAsync(token);
        _totalUserActive = users.Count(u => u.IsActive);

        // Get all payments
        var payments = await CheckoutService.GetAllPaymentsAsync(token);
        _totalPayment = payments.Count(p => p.IsActive);
        StateHasChanged();
    }

    private bool FilterFunc(InvoiceDto invoice)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (invoice.RefCode.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (invoice.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }
}
