    </MudText>
    @* Rekomendasi kelas (masih placeholder) *@
    <MudContainer>
        <MudText Class="subtitle mt-16" Typo="Typo.h5" Align="Align.Center" Color="Color.Primary">
            <b>Kelas lain yang mungkin kamu suka</b>
        </MudText>
        <MudGrid Class="mt-8">
            <MudItem xs="12" md="6" lg="4">
                <MudLink Href="/detail" Color="Color.Default">
                    <MudImage Src="img/ListMenu2.svg"></MudImage>
                    <MudText class="">Drum</MudText>
                    <MudText class=""><b>Expert Level Drummer Lessons</b></MudText>
                    <MudText class="" Color="Color.Primary"><b>IDR 5.450.000</b></MudText>
                </MudLink>
            </MudItem>
            <MudItem xs="12" md="6" lg="4">
                <MudLink Href="/detail" Color="Color.Default">
                    <MudImage Src="img/ListMenu3.svg"></MudImage>
                    <MudText class="">Drum</MudText>
                    <MudText class=""><b>From Zero to Professional Drummer (Complit Package)</b></MudText>
                    <MudText class="" Color="Color.Primary"><b>IDR 13.000.000</b></MudText>
                </MudLink>
            </MudItem>
            <MudItem xs="12" md="6" lg="4">
                <MudLink Href="/detail" Color="Color.Default">
                    <MudImage Src="img/ListMenu4.svg"></MudImage>
                    <MudText class="">Drum</MudText>
                    <MudText class=""><b>Drummer for kids (Level Basic/1)</b></MudText>
                    <MudText class="" Color="Color.Primary"><b>IDR 2.200.000</b></MudText>
                </MudLink>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudContainer>



@code {
    private DateOnly _date = new DateOnly(2022, 10, 23);
    private readonly DateOnly[] _dates =
    {
        new DateOnly(2022, 10, 23),
        new DateOnly(2022, 10, 24),
        new DateOnly(2022, 10, 25),
        new DateOnly(2022, 10, 26),
        new DateOnly(2022, 10, 27),
    };
}
