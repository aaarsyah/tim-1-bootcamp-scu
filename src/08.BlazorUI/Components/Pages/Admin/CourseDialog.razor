@using MyApp.BlazorUI.Services
@using System.ComponentModel.DataAnnotations
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation
@inject ISnackbar Snackbar

@inject IAuthService AuthService
@inject IAdminService AdminService

@inject IDialogService DialogService
@inject IWebHostEnvironment Env

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Course.Name" Label="Name" Required="true" />
        <MudTextField @bind-Value="Course.Description" Label="Description" AutoGrow Required="true" />
        <MudTextField @bind-Value="Course.CategoryRefId" Label="CategoryRefId" Required="true" />
        <MudTextField @bind-Value="Course.Price" Label="Harga" Required="true" MaxLength="9" />

        <InputFile id="fileInput" OnChange="UploadImage" hidden accept="image/*" />
        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   Class="mt-4"
                   for="fileInput">
            Upload Picture Course
        </MudButton>

        @if (!string.IsNullOrEmpty(previewImageUrl))
        {
            <MudImage Src="@previewImageUrl"
                      Alt="Picture Course Preview"
                      Width="200" Height="120"
                      Class="mx-auto mt-3 rounded shadow-sm" />
        }

        
        <MudSelect @bind-Value="Course.IsActive" Class="mt-4" Label="Status">
            <MudSelectItem Value="true">Active</MudSelectItem>
            <MudSelectItem Value="false">Inactive</MudSelectItem>
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public CourseDto Course { get; set; } = null!;
    [Parameter]
    public bool IsUpdating { get; set; }
    private string? previewImageUrl;
    private string? newScheduleDate;

    protected override void OnInitialized()
    {

        previewImageUrl = !string.IsNullOrEmpty(Course.ImageUrl) ? Course.ImageUrl : null;
        Console.WriteLine($"CourseDialog.razor: IsUpdating: {IsUpdating}");
    }

    private async Task UploadImage(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        var ext = Path.GetExtension(file.Name).ToLower();
        var fileName = $"{Guid.NewGuid()}{ext}";
        var savePath = Path.Combine(Env.WebRootPath, "img", fileName);

        await using (var stream = new FileStream(savePath, FileMode.Create))
        {
            await file.OpenReadStream(maxAllowedSize: 5_000_000).CopyToAsync(stream);
        }

        Course.ImageUrl = $"/img/{fileName}";
        previewImageUrl = Course.ImageUrl;
        StateHasChanged();
    }

    private async Task Save()
    {
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        CourseDto? result;

        if (IsUpdating)
        {
            UpdateCourseRequestDto updateCourseDto = new()
            {
                Name = Course.Name,
                Description = Course.Description,
                Price = Course.Price,
                ImageUrl = Course.ImageUrl,
                IsActive = Course.IsActive,
                CategoryRefId = Course.CategoryRefId
            };
            result = await AdminService.UpdateCourseAsync(auth, Course.RefId, updateCourseDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal mengedit course", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil mengedit course", Severity.Success);
        }
        else
        {
            CreateCourseRequestDto createCourseDto = new()
            {
                Name = Course.Name,
                Description = Course.Description,
                Price = Course.Price,
                ImageUrl = Course.ImageUrl,
                IsActive = Course.IsActive,
                CategoryRefId = Course.CategoryRefId
            };
            result = await AdminService.CreateCourseAsync(auth, createCourseDto);
            if (result == null)
            {
                Snackbar.Add($"Gagal membuat course baru", Severity.Error);
                return;
            }
            Snackbar.Add("Berhasil membuat course baru", Severity.Success);
        }
        MudDialog.Close(DialogResult.Ok(result));
    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }

}
