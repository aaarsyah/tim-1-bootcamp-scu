@page "/payment-method" 

@using System.Net.Http.Json
@using MyApp.BlazorUI.Services
@using MyApp.Shared.DTOs

@inject NavigationManagerExt Navigation

@inject IAuthService AuthService
@inject IAdminService PaymentService
@inject ICheckoutService CheckoutService

@inject IDialogService DialogService
@inject ISnackbar Snackbar


<PageTitle>Payment Method</PageTitle>

<MudText Typo="Typo.h2" Class="mt-4 mb-4">Payment Method</MudText>

<MudButton Class="mb-6" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large"
           OnClick="() => OpenPaymentDialog(null)">
    Add Payment Method
</MudButton>

<MudTable Breakpoint="Breakpoint.Sm" Items="@paymentMethods" Hover="@hover" Filter="FilterFunc1" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h2">Payment Method</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>No.</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Logo</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="No.">@(paymentMethods.IndexOf(context) + 1)</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Logo">
                <MudImage Src="@context.LogoUrl"
                          Alt="@context.Name"
                          Width="40"
                          Height="40"
                          Class="rounded-md mt-1" />
        </MudTd>
        <MudTd DataLabel="Status">
            @if (context.IsActive)
            {
                <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                    Active
                </MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">
                    Inactive
                </MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Action">
            <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small"
                       Class="ml-auto mr-2"
                       OnClick="() => OpenPaymentDialog(context)">
                Edit
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                       OnClick="() => DeletePayment(context.RefId)">
                Delete
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private List<PaymentMethodDto> paymentMethods = new List<PaymentMethodDto>();
    private bool hover = true;
    private string searchString1 = "";
    private PaymentMethodDto selectedItem1 = null!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        await LoadPayments();
        StateHasChanged();
    }

    private async Task LoadPayments()
    {
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        paymentMethods = await CheckoutService.GetAllPaymentsAsync(auth);
    }

    private bool FilterFunc1(PaymentMethodDto u) => FilterFunc(u, searchString1);

    private bool FilterFunc(PaymentMethodDto u, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (u.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }

    private async Task DeletePayment(Guid refId)
    {
        var auth = await AuthService.GetAuthAsync();
        if (auth == null)
        {
            Navigation.GoToLogin(); // User belum login, arahkan user ke login page
            return;
        }
        bool result = await PaymentService.DeletePaymentMethodAsync(auth, refId);
        if (result) await LoadPayments();
        Snackbar.Add("Berhasil menghapus payment method", Severity.Success);
    }

    private async Task OpenPaymentDialog(PaymentMethodDto? paymentItem)
    {
        var parameters = new DialogParameters();
        //
        PaymentMethodDto? paymentItemClone = null;
        bool isUpdating = paymentItem != null;
        if (paymentItem != null)
        {
            paymentItemClone = new PaymentMethodDto()
            {
                RefId = paymentItem.RefId,
                Name = paymentItem.Name,
                LogoUrl = paymentItem.LogoUrl,
                CreatedAt = paymentItem.CreatedAt,
                UpdatedAt = paymentItem.UpdatedAt,
                IsActive = paymentItem.IsActive
            };
        }
        //
        parameters.Add("Payment", paymentItemClone ?? new PaymentMethodDto());
        parameters.Add("IsUpdating", isUpdating); // Bila courseItem ada, berarti updating

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<PaymentDialog>("Payment Form", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is PaymentMethodDto)
        {

            await LoadPayments();
        }
    }

}
